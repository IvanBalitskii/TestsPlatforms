<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gamefield.testsplatform6">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="gamefield.testsplatform6.MainMenu"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gamefield.testsplatform6.TestActivity"
            android:allowBackup="true"
            android:largeHeap="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="gamefield.testsplatform6.Results"
            android:allowBackup="true"
            android:largeHeap="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="gamefield.testsplatform6.LastResult"
            android:allowBackup="true"
            android:largeHeap="true"
            android:screenOrientation="portrait"/>
        <activity android:name="gamefield.testsplatform6.tools.toPromotion" />
        <activity android:name="gamefield.testsplatform6.tools.LastActivity"></activity>
    </application>

</manifest>